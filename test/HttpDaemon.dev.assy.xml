<service:Daemon
  xmlns:service="class:/spiralcraft/service"
    xmlns:httpd="class:/spiralcraft/pioneer/httpd"
    xmlns:net="class:/spiralcraft/pioneer/net"
  >

  <services>
  
    <httpd:HttpService>
 
      <listeners>
        <net:Listener>

          <port>8080
          </port>

        </net:Listener>
      </listeners>
 
            <serviceContext>
                <httpd:SimpleHttpServiceContext>
                    
                    <documentRoot>webroot
                    </documentRoot>

          <maxSessionInactiveInterval>7200
          </maxSessionInactiveInterval>
                    
                    <servletMappings>
                    

                        <httpd:ServletMapping>

                            <servletName>file
                            </servletName>

                            <URLPattern>/
                            </URLPattern>

                        </httpd:ServletMapping>


                    </servletMappings>
                    
                    <servletHolders>
                        
                        <httpd:ServletHolder>
                            
                            <servletName>file
                            </servletName>
                            
                            <servletClass>spiralcraft.pioneer.httpd.FileServlet
                            </servletClass>
                            
                        </httpd:ServletHolder>
                        
                    </servletHolders>
                    
                </httpd:SimpleHttpServiceContext>
            
                
            </serviceContext>
            
      </httpd:HttpService>
      
    </services>

</service:Daemon>
<httpd:SimpleHttpServiceContext
  xmlns:httpd="class:/spiralcraft/pioneer/httpd/"
  >
                    
  <useURLClassLoader>true
  </useURLClassLoader>
               
  <debug>true
  </debug>

  <debugWAR>true
  </debugWAR>
      
  <servletMappings>


    <httpd:ServletMapping>
      <servletName>file
      </servletName>
        
      <URLPattern>/
      </URLPattern>
    </httpd:ServletMapping>   
    
  </servletMappings>
      
  <servletHolders>

    <httpd:ServletHolder>
                            
      <servletName>file
      </servletName>
          
      <servletClass>spiralcraft.pioneer.httpd.FileServlet
      </servletClass>
                            
    </httpd:ServletHolder>        
  </servletHolders>
      
</httpd:SimpleHttpServiceContext>
